{% extends 'back.html.twig' %}

{% block title %}Hello BackController!{% endblock %}

{% block content %}
    <div class="single-slider hero-overly  slider-height d-flex align-items-center" data-background="assets/img/hero/h1_hero.jpg">
        <div class="container">
            <div class="row"  , style="width: 100%;">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">Liste Des Reclamation</h3>


                            <table  id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;" >

                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th style="color: darkblue">Description </th>
                                    <th style="color: darkblue">Date Reclamation </th>
                                    <th style="color: darkblue">Delete</th>
                                    <th style="color: darkblue">Verify</th>




                                </tr>
                                </thead>
                                <tbody>
                                <tr {% for reclamation in reclamation %}>
                                    <td>{{ reclamation.id }}</td>
                                    <td>{{ reclamation.description }}</td>
                                    <td>{{ reclamation.datereclamation | date }}</td>

                                    <td><a href="{{ path('deleteR',{'id':reclamation.id})}}"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                                    <td><a href="{{ path('verifyR',{'id':reclamation.id})}}"><i class="fa fa-check" aria-hidden="true"></i></a></td>

                                </tr{% endfor %}>


                                </tbody>
                            </table>



                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}