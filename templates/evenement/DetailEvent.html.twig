{% extends 'front.html.twig' %}

{% block title %}Hello EvenementController!{% endblock %}

    {% block containerr %}

{% block body %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% endblock %}
        {% endblock %}
        {%  block places%}
        {% endblock %}
        {% block company %}
        {% endblock %}
{% block testimonal %}
{% endblock %}
        {% block blog %}
        <div class="support-company-area support-padding fix">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-6 col-lg-6">
                        <div class="support-location-img mb-50">
                            <img src="{{ asset('uploads/'~evenement.image ) }}" alt="">
                            
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6">
                        <div class="right-caption">
                            <!-- Section Tittle -->
                            <div class="section-tittle section-tittle2">
                                
                                <h2>{{ evenement.name }}</h2>
                            </div>
                            <div class="support-caption">
                                <h3>{{ evenement.description }}</h3>
                                <br>
                                <div class="select-suport-items">
                                    <label class="single-items"> From :{{ evenement.dateDebut | date("m/d/Y")}} , until :{{ evenement.dateFin | date("m/d/Y") }}
                                        <input type="checkbox" checked="checked active">
                                        <span class="checkmark"></span>
                                    </label>
                                    
                                    <label class="single-items"> Capacity : {{ evenement.capacity }}
                                        <input type="checkbox" checked="checked active">
                                        <span class="checkmark"></span>
                                    </label>
                                    <label class="single-items"> Adresse : {{ evenement.adresse}}
                                        <input type="checkbox" checked="checked active">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>

                                <a  class="btn btn-dark" href="{{ path('reserver',{'id':evenement.id}) }}" style="color :white;">Reserve </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}
