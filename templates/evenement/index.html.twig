{% extends 'front.html.twig' %}

{% block title %}Hello EvenementController!{% endblock %}

    {% block containerr %}

{% block body %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% endblock %}
        {% endblock %}
        {%  block places%}
        {% endblock %}
        {% block company %}
        {% endblock %}
{% block testimonal %}
{% endblock %}
        {% block blog %}
            <div class="home-blog-area section-padding1">
                <div class="container">
                    <!-- Section Tittle -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="section-tittle text-center">
                                <span> <h3>  the perfect destination for your vacation</h3> </span>
                                <h2> Our Recent Events</h2>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                      {% for event in listEvents %}
                        <div class="col-xl-6 col-lg-6 col-md-6">
                            <div class="home-blog-single mb-30">
                                <div class="blog-img-cap">
                                    <div class="blog-img">
                                      <img src="{{ asset('uploads/'~event.image ) }}" alt="">
                                    </div>
                                    <div class="blog-cap">
                                        <p> |   {{ event.name }}</p>
                                        <h3>{{ event.description }}</h3>
                                        <a  class="btn btn-dark" style="color :white;" href="{{ path('Front_event_show', {'id': event.id}) }}"> See More </a>
                                    </div>
                                </div>
                                <div class="blog-date text-center">
                                   <p>New </br> event</p>
                                </div>
                            </div>
                        </div>
                        

                      
                        {% endfor %}
                    </div>
                </div>
            </div>

        {% endblock %}
