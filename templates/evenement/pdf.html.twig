
<body style="background-color:AliceBlue;">
<div style="text-align:center">
    <h1 style="color: MidnightBlue;"> Liste des evenements </h1>
</div>&nbsp;&nbsp;&nbsp;&nbsp;
<div height="50px">

</div>
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="table-responsive"  >
    <table class="table mb-0 "  align="center" id="events">
        <thead style="background-color:#FFA500">
        <tr >

            <th>Id</th>
            <th>Nom</th>
            <th>DateDebut</th>
            <th>DateFin</th>

        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>

                <td>
                    <div class="media-body">
                        <span class="mb-0 text-sm">{{ event.id }}</span>
                    </div>
                </td>

                <td>
<span class="badge badge-dot mr-4">
    {{ event.name }}
</span>
                </td>
                <td>{{ event.dateDebut ? event.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ event.dateFin ? event.dateFin|date('Y-m-d') : '' }}</td>

            </tr>

        {% endfor %}


        </tbody>

    </table>
</div>
</body>