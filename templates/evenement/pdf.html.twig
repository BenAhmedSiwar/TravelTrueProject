<h1>Liste des evenements</h1>


<table class="table" border=2 align="center" >
    <thead>
    <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>DateDebut</th>
        <th>DateFin</th>

    </tr>
    </thead>
    <tbody>
    {% for event in events %}
        <tr>
            <td>{{ event.id }}</td>
            <td>{{ event.name }}</td>
            <td>{{ event.dateDebut ? event.dateDebut|date('Y-m-d') : '' }}</td>
            <td>{{ event.dateFin ? event.dateFin|date('Y-m-d') : '' }}</td>

        </tr>
    {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>