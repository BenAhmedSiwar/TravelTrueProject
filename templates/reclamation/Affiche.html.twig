{% extends 'base.html.twig' %}


{% block content %}
    <div class="single-slider hero-overly  slider-height d-flex align-items-center" data-background="assets/img/hero/h1_hero.jpg">
        <div class="container">
            <div class="row"  , style="width: 100%;">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title" style="color: #FFFFFF">Liste Des Reclamation</h3>


                                <table  id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" >

                                <thead>
                                <tr>
                                    <th style="color: #FFFFFF">ID</th>
                                    <th style="color: #FFFFFF">Description </th>
                                    <th style="color: #FFFFFF">Date Reclamation </th>
                                    <th style="color: #FFFFFF">Statut </th>
                                    <th style="color: #FFFFFF">update</th>




                                </tr>
                                </thead>
                                <tbody>
                                <tr {% for reclamation in reclamation %}>
                                    <td style="color: #FFFFFF">{{ reclamation.id }}</td>
                                    <td style="color: #FFFFFF" >{{ reclamation.description }}</td>
                                    <td style="color: #FFFFFF" >{{ reclamation.datereclamation | date }}</td>
                                    <td style="color: #FFFFFF">{{ reclamation.statut }}</td>
                                    <td style="color: #FFFFFF"><a href="{{ path('UpdateReclamation',{'id':reclamation.id})}}">
                                            <img src="{{asset('assets/img/1111.jpg') }}" style="height: 25px; width: 25px"></a>
                                    </td>
                                </tr{% endfor %}>
                                <li><a href="{{ path('AddReclamation') }}" style="color:#FFFF99">Add Reclamation</a></li>

                                </tbody>
                            </table>



                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


