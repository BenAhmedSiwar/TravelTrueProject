{% extends 'back.html.twig' %}
{% block content %}

 
<div class="card mb-4">
                            
                            <div class="card-body">
                                <table id="datatablesSimple">
                                    <thead>
                                        <tr>
                                          <th>Photo</th>
                                            <th>Nom</th>
                                            <th>Prénom</th>
                                            <th>Date de naissance</th>
                                            <th>Email</th>
                                            <th>Date de création</th>
                                            <th>Gestion</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Photo</th>
                                            <th>Name</th>
                                            <th>Position</th>
                                            <th>Office</th>
                                            <th>Age</th>
                                            <th>Start date</th>
                                            <th>Salary</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                    {% for u in user%}
                                        <tr>
                                        <td>
                                           <div class="col-xl-2 col-lg-2 col-md-1">
                                            <div class =" circular--landscape  comment-pic   ">
                                            <img class="columnpic" height="50" width="50" style="border-radius: 50%" src = "{{ ('uploads/') ~ u.photo}}"></img>
                                            </div>
                                           </div>
                                        </td>
                                            <td>{{ u.getNom ()}} </td>
                                            <td>{{ u.getPrenom ()}}</td>
                                            <td>{{ u.getDateNaissance () |date('d-m-Y')}}</td>
                                            <td>{{ u.getEmail()}}</td>
                                            <td>{{ u.getCreatedAt () |date('d-m-Y')}}</td>
                                            <td><a class="bookmark1" href="{{ path('usersEdit', { 'id': u.getId } )}}" type ="submit" title="bookmark" ><i class="fas fa-edit" ></i></a>
                                            <td><a class="bookmark1"  type ="submit" title="bookmark" onclick="return confirm('Vous etes sur de supprimer cet utilisateur ?')" href="{{ path('deleteUser', { 'id': u.getId } )}}" ><i class="fa fa-trash" ></i></a>
                                           
                                            </td>
                                        </tr>
                                       {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
 
