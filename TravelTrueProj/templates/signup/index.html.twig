{% extends 'front.html.twig' %}

 {% block content %}

            {% block areastart %}
                <div class="slider-area  ">
                    <!-- Mobile Menu -->
                    <div class="slider-active">
                        <div class="single-slider hero-overly  slider-height d-flex align-items-center" data-background="assets/img/hero/h1_hero.jpg">
                            <div class="container">
                                <div class="row">
                                    <div class="col-xl-9 col-lg-9 col-md-9">
                                        <div class="hero__caption">
                                            <h1>Sign <span>Up!</span> </h1>
                                        </div>
                                    </div>
                                </div>

                                <!-- Search Box -->
                                <div class="row">
                                    <div class="col-xl-12">
                                        <!-- form -->
                                        {{ form_start(form)}}
                                        <div class=" mb-10">
                                            <div class="input-field">
                                                <label class="">{{ form_label(form.nom) }}</label>
                                                {{ form_widget(form.nom,{'attr':{ 'placeholder': 'Entrez votre nom' ,'class': 'form-control' }})}}
                                                <div style="color:red">{{ form_errors(form.nom) }} </div>
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <label class="label15">Prenom*</label>
                                            {{ form_widget(form.prenom,{'attr':{ 'placeholder': 'Entrez votre prenom' ,'class': 'form-control' }})}}
                                            <div style="color:red">{{ form_errors(form.prenom) }} </div>

                                        </div>
                                        <div class="form-group">
                                            <label class="label15">Date de Naissance*</label>
                                            {{ form_widget(form.date_naissance,{'attr':{ 'placeholder': 'Entrez votre date de naissance' ,'class': 'form-control' }})}}
                                            <div style="color:red">{{ form_errors(form.date_naissance) }} </div>

                                        </div>
                                        <div class="form-group">
                                            <label class="label15">Email Address*</label>
                                            {{ form_widget(form.email,{'attr':{ 'placeholder': 'email@example.com' ,'class': 'form-control' }})}}
                                            <div style="color:red">{{ form_errors(form.email) }} </div>

                                        </div>
                                        <div class="form-group">
                                            <label class="label15">Password*</label>
                                            {{ form_widget(form.password,{'attr':{ 'placeholder': 'mot de passe' ,'class' :'form-control' }})}}
                                            <div style="color:red">{{ form_errors(form.password) }} </div>

                                        </div>
                                        <div class="form-group">
                                            <label class="label15">Confirm Password*</label>
                                            {{ form_widget(form.confirm_password,{'attr':{ 'placeholder': 'mot de passe' ,'class': 'form-control' }})}}
                                            <div style="color:red">{{ form_errors(form.confirm_password) }} </div>

                                        </div>
                                        <div class="ui checkbox apply_check check_out checked">
                                            <input type="checkbox" tabindex="0" class="hidden">
                                            <label style="color:#242424 !important;">I accept the Terms of Services</label>
                                        </div>
                                        <button type="submit" class="lr_btn">Next</button>
                                        {{ form_end(form)}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}

 {% endblock %}